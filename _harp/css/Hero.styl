@import vars

.Hero
  position relative
  padding-top 10rem
  padding-bottom 10rem
  // height 100vh

.hero-title
  font-size 2.5rem
  line-height 3rem
  font-weight 500
  margin 0
  margin-bottom 1rem

.hero-subtitle
  font-size 1.5rem
  line-height 2.25rem
  font-weight 300
  // color $black

.hero-input
  display block
  font-weight 300
  width 100%
  height 2rem
  padding-left 0.25rem
  margin-bottom 1rem
  border 0
  border-bottom 1px solid rgba($black, 20%)
  // background-color rgba($black, 5%)
  &:focus
    outline 0
    

.hero-input-btn
  width 100%
  height 4rem
  background-color #205480
  background-image linear-gradient(to bottom, #29618e, #164a74)
  color $white
  border 0
  font-size 1rem
  font-weight 300
  border-radius $border-radius-default
  margin-top 1rem

nav
  position absolute
  top 1.5rem
  left 50%
  transform translateX(-50%)

.nav-logo
  display inline-block
  vertical-align middle
  width 2.5rem
  margin-right 0.5rem

.nav-text
  display inline-block
  vertical-align middle
  font-family 'Work Sans', sans-serif
  font-weight 800
  font-size 1.5rem
  